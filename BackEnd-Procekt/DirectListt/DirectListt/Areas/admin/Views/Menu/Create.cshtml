@model Menu
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <form asp-area="admin" asp-controller="Menu" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">

                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">

                    <label asp-for="@Model.Ingredient" class="form-label">Ingredient</label>
                    <input class="form-control" asp-for="@Model.Ingredient">
                    <span asp-validation-for="@Model.Ingredient" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="admin" asp-controller="Menu" asp-action="Index" class="btn btn-dark">Back to list</a>
            </form>
        </div>
    </div>
</div>
