@model UserAdmin 
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 mt-3">
            <form asp-area="Admin" asp-controller="Account" asp-action="UpdateUser" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <img style="width: 100px" src="~/Uploads//@Model.Image" alt="Alternate Text" />
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.FullName" class="form-label">FullName</label>
                    <input asp-for="@Model.FullName" class="form-control">
                    <span asp-validation-for="@Model.FullName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">FullName</label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email"></span>
                </div>

                <input asp-for="Id" hidden />

                <button type="submit" class="btn btn-primary btn-user ">
                    Update
                </button>
                <a asp-area="admin" asp-controller="Account" asp-action="Users">Back to List</a>
            </form>
        </div>
    </div>
</div>
