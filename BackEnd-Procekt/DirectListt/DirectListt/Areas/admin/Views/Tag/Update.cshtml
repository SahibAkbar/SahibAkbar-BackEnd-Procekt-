@model Tag
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="admin" asp-controller="Tag" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="@Model.Id" />
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="admin" asp-controller="Tag" asp-action="Index" class="btn btn-dark">Back to list</a>
            </form>
        </div>
    </div>
</div>