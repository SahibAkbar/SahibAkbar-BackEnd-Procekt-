@model Setting
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Setting" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Logo">Logo</label>
                    <img style="width: 100px" src="~/Uploads//@Model.Logo" alt="Alternate Text" />
                    <input class="form-control" asp-for="@Model.LogoFile">
                    <span asp-validation-for="@Model.LogoFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactAdress">ContactAdress</label>
                    <input class="form-control" asp-for="@Model.ContactAdress">
                    <span asp-validation-for="@Model.ContactAdress" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactEmail">ContactEmail</label>
                    <input class="form-control" asp-for="@Model.ContactEmail">
                    <span asp-validation-for="@Model.ContactEmail" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactPhone">ContactPhone</label>
                    <input class="form-control" asp-for="@Model.ContactPhone">
                    <span asp-validation-for="@Model.ContactPhone" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Adress">Adress</label>
                    <input class="form-control" asp-for="@Model.Adress">
                    <span asp-validation-for="@Model.Adress" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.About">About</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.About"></textarea>
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DreamTitle">DreamTitle</label>
                    <input class="form-control" asp-for="@Model.DreamTitle">
                    <span asp-validation-for="@Model.DreamTitle" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DreamSubTitle">About</label>
                    <input class="form-control" asp-for="@Model.DreamSubTitle">
                    <span asp-validation-for="@Model.DreamSubTitle" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="Setting" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>