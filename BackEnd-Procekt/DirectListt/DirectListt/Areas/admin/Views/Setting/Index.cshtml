@model Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="position: absolute;">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Setting" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Logo</th>
                        <th scope="col">ContactAdress</th>
                        <th scope="col">ContactEmail</th>
                        <th scope="col">ContactPhone</th>
                        <th scope="col">Adress</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">About</th>
                        <th scope="col">DreamTitle</th>
                        <th scope="col">DreamSubTitle</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody style="height: 107px; overflow: hidden; position: absolute;>
                    
                    <tr>
                        <th scope="row"></th>
                        <td><img src="~/Uploads/@Model.Logo" style="width: 100px" alt="Alternate Text" /></td>
                        <td>@Model.ContactAdress</td>
                        <td>@Model.ContactEmail</td>
                        <td>@Model.ContactPhone</td>
                        <td>@Model.Adress</td>
                        <td>@Model.Email</td>
                        <td>@Model.Phone</td>
                        <td>@Html.Raw(Model.About)</td>
                        <td>@Model.DreamTitle</td>
                        <td>@Model.DreamSubTitle</td>
                        <td>
                            <a class="btn btn-success mb-1" asp-area="admin" asp-controller="Setting" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                     
                    </tbody>
            </table>
        </div>
    </div>
</div>

