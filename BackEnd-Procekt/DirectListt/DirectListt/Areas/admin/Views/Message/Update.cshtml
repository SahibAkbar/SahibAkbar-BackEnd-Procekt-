
@model Contact
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Message" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.FirstName">FirstName</label>
                    <input class="form-control" asp-for="@Model.FirstName">
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName">LastName</label>
                    <input class="form-control" asp-for="@Model.LastName">
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Subject">Subject</label>
                    <input class="form-control" asp-for="@Model.Subject">
                    <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Message">Message</label>
                    <input class="form-control" asp-for="@Model.Message">
                    <span asp-validation-for="@Model.Message" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="Message" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>