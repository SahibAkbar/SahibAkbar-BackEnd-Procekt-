@model VmBlog
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <partial name="_bannerpartial" model="Model.Banner"/>
    <!-- Content -->
    <div class="content">
        <div class="container">
            <!-- Blog Posts -->
            <div class="blog-page">
                <div class="row">
                    <div class="col-lg-9 col-md-8 padding-right-30">
                        <!-- Blog Post -->
                        @foreach (var item in Model.Blogs)
                        {
                            <div class="card card-lift--hover shadow border-0 mb-4">
                                <img class="img-fluid" src="~/Uploads/@item.Image" alt="image">
                                <div class="card-body py-4">
                                    <h5 class="text-primary">@item.Name</h5>
                                    <p class="text-primary">@item.CretedDate.ToString("dd MMMM yyyy")</p>
                                    <p class="description mt-3">@item.Title</p>
                                    <a class="btn btn-primary" asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">Read More</a>
                                </div>
                            </div>
                                        }
                    
                    </div>
                    <!-- Blog Posts / End -->
                    <!-- Widgets -->
                    <div class="col-lg-3 col-md-4">
                        <div class="sidebar right">
                            <!-- Widget -->
                            <div class="widget">
                                <form class="search-form" method="get" asp-controller="Blog" asp-action="Index">
                                    <div class="form-group">
                                        <div class="input-group mb-4">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                                            </div>
                                            <input class="form-control" placeholder="Search" type="text" name="SearchData">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="widget margin-top-40">
                                <h3>Popular Posts</h3>
                                <ul class="widget-tabs">
                                    <!-- Post #1 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="#"><img src="assets/images/bw-1.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="#">Hotels for All Budgets </a></h5>
                                                <span>October 26, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                    <!-- Post #2 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="#"><img src="assets/images/bw-2.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="#">The 50 Greatest Street Arts In London</a></h5>
                                                <span>November 9, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                    <!-- Post #3 -->
                                    <li>
                                        <div class="widget-content">
                                            <div class="widget-thumb">
                                                <a href="3.html"><img src="assets/images/bw-3.jpg" alt="image"></a>
                                            </div>
                                            <div class="widget-text">
                                                <h5><a href="#">The Best Cofee Shops In Sydney Neighborhoods</a></h5>
                                                <span>November 12, 2016</span>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- Widget / End-->
                            <!-- Widget -->
                            <div class="widget margin-top-40">
                                <h3 class="margin-bottom-25">Social</h3>
                                <div class="btn-wrapper">
                                    @foreach (var item in Model.Socials)
                                    {
                        <a target="_blank" href="@item.Link" class="btn btn-neutral btn-icon-only btn-twitter btn-round btn-lg" data-toggle="tooltip" data-original-title="Follow us">
                            <i class="@item.Icon"></i>
                        </a>}

                                </div>
                            </div>
                            <!-- Widget / End-->
                            <div class="clearfix"></div>
                            <div class="margin-bottom-40"></div>
                        </div>
                    </div>
                </div>
                <!-- Sidebar / End -->
            </div>
        </div>
    </div>
</div>